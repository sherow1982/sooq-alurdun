<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # حيادة google-merchant-feed.xml إلى الرئيسية
    RewriteRule ^google-merchant-feed\.xml$ / [R=301,L]
    
    # السماح بمجلد products - لا تحيد
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^products/index\.html$ - [L]
    
    # حيادة HTML - إزالة الـ .html
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^([^.]+)$ .html [L]
    
    # HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Cache Headers
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# Gzip Compression
<IfModule mod_gzip.c>
    mod_gzip_on On
    mod_gzip_comp_level 6
    mod_gzip_item_include file \.(html|txt|css|js|php|xml)$
</IfModule>
